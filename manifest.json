{
  "manifest_version": 2,
  "name": "ChessHz",
  "description": "Extension helping players get better on famous chess servers.",
  "version": "0.1",
  "browser_action": {
    "default_title": "ChessHz",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://chess24.com/*/game/*"
      ],
      "js": [
        "chess24.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "nativeMessaging",
    "activeTab"
  ]
}